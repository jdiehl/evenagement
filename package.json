{
  "name": "evenagement",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "turbo run start",
    "storybook": "turbo run storybook",
    "test": "turbo run test",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "emulator": "turbo run emulator --parallel",
    "deploy": "turbo run deploy"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "turbo": "^1.0.26"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "test": {
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "emulator": {
        "cache": false
      },
      "deploy": {
        "cache": false
      },
      "storybook": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@types/node": "^17.0.2"
  }
}
