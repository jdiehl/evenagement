{
  "name": "evenagement",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "turbo run start",
    "sb": "turbo run storybook",
    "test": "turbo run test",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "deploy": "firebase deploy",
    "dev-emulator": "concurrently -k \"npm:dev\" \"npm:emulator\"",
    "emulator": "firebase emulators:start --import=./emulator-data --export-on-exit"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "firebase": "^9.6.2",
    "husky": "^7.0.4",
    "turbo": "^1.0.24"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "test": {
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "storybook": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@types/node": "^17.0.2"
  }
}
